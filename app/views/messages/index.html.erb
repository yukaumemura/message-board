<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
　<div class="form-group">
    <table class="table table-bordered">
        <tr>
            <th><label for="exampleInputEmail1">名前</label></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><label for="exampleInputPassword1">内容</label></th>
            <td><%= f.text_area :body, class: "form-control" %></td>
        </tr>
         <tr>
            <th><div class="form-group">
                <label for="exampleInputPassword1">メッセージを送信する</label>
              </div>
            </th>
            <td><p class="bg-primary"><%= f.submit class: "btn btn-sm btn-primary" %></p></td>
        </tr>
    </table>
　</div>
<% end %>
