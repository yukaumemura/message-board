<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="form-group">
    <label for="message_name">名前</label>
    <%= f.text_field :name, class:"form-control", placeholder:"Jane Doe" %>
  </div>
  <div class="form-group">
    <label for="mesasge_body">内容</label>
    <%= f.text_area :body, class: "form-control", placeholder:"御内容をご入力ください" %>
  </div>
   <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit class: "btn btn-default" %>
    </div>

<% end %>
